<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Togather" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color</item>
        <item name="colorSecondaryVariant">@color/theme_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 타이틀 바 제거 -->
        <item name="windowNoTitle">true</item>

        <!-- 선택된(포커스) 상태의 밑줄 색상 설정 -->
        <item name="colorControlActivated">@color/theme_color</item>
        <!-- 손잡이 부분 색상 설정 -->
        <item name="android:textSelectHandle">@color/theme_color</item>
        <!-- 커서 색상 설정 -->
        <item name="android:textColorHighlight">@color/theme_color</item>

        <!-- 위젯 전역 스타일 설정 -->
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>