<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingHorizontal="17.5dp">

    <RelativeLayout
        android:id="@+id/content_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_view_border_bottom_white_background">

        <RelativeLayout
            android:id="@+id/chatImageGroup_relativeLayout"
            android:layout_width="75dp"
            android:layout_centerVertical="true"
            android:layout_height="75dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/firstUser_roundedImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_default_profile"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/secondUser_roundedImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="-7.5dp"
                android:layout_toRightOf="@+id/firstUser_roundedImageView"
                android:scaleType="centerCrop"
                android:src="@drawable/user_profile_image_temp_image_1"
                app:riv_oval="true" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/thirdUser_roundedImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/firstUser_roundedImageView"
                android:layout_centerVertical="true"
                android:layout_marginTop="-5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_profile_image_temp_image_2"
                app:riv_oval="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/postImageBackground_cardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/secondUser_roundedImageView"
                android:layout_alignBottom="@+id/thirdUser_roundedImageView"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="-10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/postImage_cardView"
                    android:layout_width="47.5dp"
                    android:layout_height="47.5dp"
                    android:layout_margin="2.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/post_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_temp_image_1" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postInfo_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/chatImageGroup_relativeLayout">

            <RelativeLayout
                android:id="@+id/postDetailInfo_relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/postTitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:maxWidth="300dp"
                    android:maxLines="1"
                    android:text="도미노 피자 드실분 구해요"
                    android:textSize="17.5sp" />

                <TextView
                    android:id="@+id/chatMemberNum_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7.5dp"
                    android:layout_toRightOf="@+id/postTitle_textView"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:text="4"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lastChatContent_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chatMemberNum_textView"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:maxWidth="300dp"
                    android:maxLines="2"
                    android:text="솔못에서 만날게요!"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lastChatElapsedTime_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:maxWidth="300dp"
                    android:text="오후 6:01"
                    android:textColor="@color/gray_text"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:id="@+id/unreadMsgNum_relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/lastChatElapsedTime_textView"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/filled_icon_circle_background"
                    android:minWidth="10dp"
                    android:paddingHorizontal="6.75dp">

                    <TextView
                        android:id="@+id/unreadMsgNum_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>