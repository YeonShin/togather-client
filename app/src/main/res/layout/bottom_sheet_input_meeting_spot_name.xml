<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inputMeetingSpotBottomSheet_layout"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="0dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/bottomSheetTitle_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택한 곳의 장소명 입력해 주세요"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottomSheetGuideMsg_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheetTitle_textView"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:text="예) 강남역 1번 출, 교보타워 앞"
            android:textSize="17.5sp" />

        <EditText
            android:id="@+id/spotName_editText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/bottomSheetGuideMsg_textView"
            android:layout_marginTop="20dp"
            android:background="@drawable/light_gray_border"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:hint="예) 강남역 1번 출구, 교보타워 앞"
            android:paddingHorizontal="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="17.5sp" />
    </RelativeLayout>


    <Button
            android:id="@+id/addMeetingSpot_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_border"
        android:backgroundTint="@color/disabled_widget_background_light_gray_color"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:outlineProvider="none"
        android:text="모임 장소 등록"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="19sp" />

</RelativeLayout>