<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createCommunityPostSelectCategoryBottomSheet_layout"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/bottomSheetTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="게시글의 주제를 선택해 주세요."
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottomSheetTitle_textView"
        android:layout_marginTop="22.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/famousRestaurantCategory_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/famousRestaurantCategory_button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:text="맛집"
                    android:textAlignment="textStart"
                    android:textSize="17.5sp" />

                <ImageView
                    android:id="@+id/famousRestaurantCategoryCheck_imageView"
                    android:layout_width="27.5dp"
                    android:layout_height="27.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hospitalAndPharmacyCategory_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/famousRestaurantCategory_relativeLayout">

                <Button
                    android:id="@+id/hospitalAndPharmacyCategory_button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:text="병원/약국"
                    android:textAlignment="textStart"
                    android:textSize="17.5sp" />

                <ImageView
                    android:id="@+id/hospitalAndPharmacyCategoryCheck_imageView"
                    android:layout_width="27.5dp"
                    android:layout_height="27.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lifeAndConvenienceCategory_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hospitalAndPharmacyCategory_relativeLayout">

                <Button
                    android:id="@+id/lifeAndConvenienceCategory_button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:text="생활/편의"
                    android:textAlignment="textStart"
                    android:textSize="17.5sp" />

                <ImageView
                    android:id="@+id/lifeAndConvenienceCategoryCheck_imageView"
