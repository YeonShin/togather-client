            <RelativeLayout
                android:id="@+id/lostAndMissingCategory_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/neighborhoodSceneCategory_relativeLayout">

                <Button
                    android:id="@+id/lostAndMissingCategory_button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:text="분실/실종"
