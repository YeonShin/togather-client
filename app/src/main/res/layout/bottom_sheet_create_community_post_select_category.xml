                    android:layout_height="27.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/check"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
